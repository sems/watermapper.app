{
  "name": "water-mapper-website",
  "version": "1.0.0",
  "description": "Simple website for Water Mapper app.",
  "main": "index.js",
  "scripts": {
    "generate-favicon": "node generate-favicon.js",
    "start": "browser-sync start --server --files '*.html, styles.css'",
    "sass": "sass --watch styles.sass:styles.css && postcss styles.css --use autoprefixer -o styles.css",
    "dev": "npm-run-all --parallel start sass"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "browser-sync": "^2.29.3",
    "sass": "^1.68.0",
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "postcss-cli": "^11.0.0"
  }
}
